{
    "rules": {
        // TS feature
        "member-access": true, // Sets the access rights of the member objectï¼ˆpublic,private,protect)
        "member-ordering": [// Sets the order of modifiers
            true,
            {
                "order": [ 
                    "public-static-field",
                    "public-static-method",
                    "protected-static-field",
                    "protected-static-method",
                    "private-static-field",
                    "private-static-method",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-empty-interface":true,// Null interfaces are not allowed
        "no-parameter-reassignment":true,// Method input parameters are not allowed to be modified
        "prefer-for-of":true,// If no index is used in the for loop, the recommendation is to use the for-of

        // function feature
        "await-promise":true,// Users are not allowed to use await without a Promise
        "curly":true,// If /for/do/while enforces curly braces
        "forin":true,// When you use a FOR IN statement, force a hasOwnProperty check
        "no-arg":true,// The use of arguments.callee is not allowed
        "no-conditional-assignment":true,// The do while/for/if/while statement will check for, for example, if(a=b)
        "no-debugger":true,// Debugger is not allowed
        "no-duplicate-super":true,// Super () is not allowed to be used twice in a constructor
        "no-eval":true,// Eval is not allowed
        "no-for-in-array":true,// For-in is not allowed for Array
        "no-invalid-template-strings":true,// Only allow ${in template strings
        "no-invalid-this":true,// You are not allowed to use 'this' outside of class
        "no-null-keyword":true,// NULL is not allowed. Use undefined instead of NULL to refer to a null pointer object
        "no-sparse-arrays":true,// No empty elements in the array are allowed
        "no-string-throw":true,// It is not allowed to throw a string
        "no-switch-case-fall-through":true,// It is not allowed to start a new section of case logic in a case paragraph without using a breack
        "no-unsafe-finally":true,// Are not allowed to use in finally return/continue/break/throw
        "no-unused-expression":true,// Unused expressions are not allowed
        "no-use-before-declare":true,// Must be declared before use
        "no-var-keyword":true,// Var is not allowed
        "radix":true,// When parseInt, you must enter the Radix precision parameter
        "triple-equals":true,// The identity sign must be used for equal comparisons
        "use-isnan":true,// Only the isNaN method is allowed to check if a number is valid

        // Maintainability function
        "indent":[true, "spaces", 4],// Each line begins with four Spaces
        "max-classes-per-file":[true,1],// Number of definable classes per file
        "max-file-line-count":[true,500],// Define the number of lines of code per file
        "max-line-length":[true,200],// Define the number of lines of code per line
        "no-default-export":true,// The export default keyword is disallowed because the object name in the import needs to be modified when the export object name changes.
        "no-duplicate-imports":true,// It is forbidden to refer to the same module more than once within a file

        // format
        "align":[true,"parameters","arguments","statements","members","elements"],// Define the alignment style
        "array-type":[true,"array"],// It is recommended to declare an array object using the T[] method
        "class-name":true,
        "comment-format":[true, "check-space"],// Define Comment Format
        "encoding":true,// Define the encoding format by default UTF-8
        "import-spacing":true,// The import keyword is followed by space
        "jsdoc-format":true,// The comments are based on the JSDoc style
        "new-parens":true,// You need parentheses when you call a constructor
        "no-consecutive-blank-lines":[true,2],// No empty lines are allowed
        "no-trailing-whitespace": [// Spaces are not allowed
            true,
            "ignore-comments",
            "ignore-jsdoc"
        ],
        "no-unnecessary-initializer":true,// Unnecessary initialization is not allowed
        "variable-name":[true,"check-format",// Define variable naming conventions
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "ban-keywords"]
    }
}